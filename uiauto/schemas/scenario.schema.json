{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "vars": {
      "type": "object",
      "additionalProperties": true
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "minProperties": 1,
        "maxProperties": 1,
        "additionalProperties": false,
        "properties": {
          "open_app": {
            "type": "object",
            "additionalProperties": false,
            "required": ["path"],
            "properties": {
              "path": { "type": "string" },
              "wait_for_idle": { "type": "boolean" }
            }
          },
          "connect": {
            "type": "object",
            "additionalProperties": true
          },
          "click": {
            "type": "object",
            "additionalProperties": false,
            "required": ["element"],
            "properties": {
              "element": { "type": "string" },
              "overrides": { "type": "object" }
            }
          },
          "double_click": {
            "type": "object",
            "additionalProperties": false,
            "required": ["element"],
            "properties": {
              "element": { "type": "string" },
              "overrides": { "type": "object" }
            }
          },
          "right_click": {
            "type": "object",
            "additionalProperties": false,
            "required": ["element"],
            "properties": {
              "element": { "type": "string" },
              "overrides": { "type": "object" }
            }
          },
          "hover": {
            "type": "object",
            "additionalProperties": false,
            "required": ["element"],
            "properties": {
              "element": { "type": "string" },
              "overrides": { "type": "object" }
            }
          },
          "hotkey": {
            "type": "object",
            "additionalProperties": false,
            "required": ["keys"],
            "properties": {
              "keys": { "type": "string" }
            }
          },
          "type": {
            "type": "object",
            "additionalProperties": false,
            "required": ["element", "text"],
            "properties": {
              "element": { "type": "string" },
              "text": { "type": "string" },
              "clear": { "type": "boolean" },
              "overrides": { "type": "object" }
            }
          },
          "click_and_type": {
            "type": "object",
            "additionalProperties": false,
            "required": ["element", "text"],
            "properties": {
              "element": { "type": "string" },
              "text": { "type": "string" },
              "clear": { "type": "boolean" },
              "overrides": { "type": "object" }
            }
          },
          "wait": {
            "type": "object",
            "additionalProperties": false,
            "required": ["element"],
            "properties": {
              "element": { "type": "string" },
              "state": {
                "type": "string",
                "enum": ["exists", "visible", "enabled"]
              },
              "timeout": { "type": "number" },
              "overrides": { "type": "object" }
            }
          },
          "wait_for_gone": {
            "type": "object",
            "additionalProperties": false,
            "required": ["element"],
            "properties": {
              "element": { "type": "string" },
              "timeout": { "type": "number" },
              "overrides": { "type": "object" }
            }
          },
          "wait_for_any": {
            "type": "object",
            "additionalProperties": false,
            "required": ["elements"],
            "properties": {
              "elements": {
                "type": "array",
                "items": { "type": "string" },
                "minItems": 1
              },
              "timeout": { "type": "number" },
              "overrides": { "type": "object" }
            }
          },
          "assert": {
            "type": "object",
            "additionalProperties": false,
            "required": ["element"],
            "properties": {
              "element": { "type": "string" },
              "state": {
                "type": "string",
                "enum": ["exists", "visible", "enabled"]
              },
              "overrides": { "type": "object" }
            }
          },
          "assert_text_equals": {
            "type": "object",
            "additionalProperties": false,
            "required": ["element", "expected"],
            "properties": {
              "element": { "type": "string" },
              "expected": { "type": "string" },
              "overrides": { "type": "object" }
            }
          },
          "assert_text_contains": {
            "type": "object",
            "additionalProperties": false,
            "required": ["element", "substring"],
            "properties": {
              "element": { "type": "string" },
              "substring": { "type": "string" },
              "overrides": { "type": "object" }
            }
          },
          "set_checkbox": {
            "type": "object",
            "additionalProperties": false,
            "required": ["element", "checked"],
            "properties": {
              "element": { "type": "string" },
              "checked": { "type": "boolean" },
              "overrides": { "type": "object" }
            }
          },
          "assert_checkbox_state": {
            "type": "object",
            "additionalProperties": false,
            "required": ["element", "checked"],
            "properties": {
              "element": { "type": "string" },
              "checked": { "type": "boolean" },
              "overrides": { "type": "object" }
            }
          },
          "select_combobox": {
            "type": "object",
            "additionalProperties": false,
            "required": ["element", "option"],
            "properties": {
              "element": { "type": "string" },
              "option": { "type": "string" },
              "by_index": { "type": "boolean" },
              "item_element": { "type": "string" },
              "overrides": { "type": "object" }
            }
          },
          "select_combobox_item": {
            "type": "object",
            "additionalProperties": false,
            "required": ["combobox", "item"],
            "properties": {
              "combobox": { "type": "string" },
              "item": { "type": "string" },
              "overrides": { "type": "object" }
            }
          },
          "select_list_item": {
            "type": "object",
            "additionalProperties": false,
            "required": ["element"],
            "properties": {
              "element": { "type": "string" },
              "item_text": { "type": "string" },
              "item_index": { "type": "integer" },
              "overrides": { "type": "object" }
            }
          },
          "assert_count": {
            "type": "object",
            "additionalProperties": false,
            "required": ["element", "expected"],
            "properties": {
              "element": { "type": "string" },
              "expected": { "type": "integer" },
              "overrides": { "type": "object" }
            }
          },
          "close_window": {
            "type": "object",
            "additionalProperties": false,
            "required": ["window"],
            "properties": {
              "window": { "type": "string" }
            }
          },
          "kill_app": {
            "type": "object",
            "additionalProperties": false,
            "properties": {}
          },
          "click_if_exists": {
            "type": "object",
            "additionalProperties": false,
            "required": ["element"],
            "properties": {
              "element": { "type": "string" },
              "timeout": { "type": "number" },
              "overrides": { "type": "object" }
            }
          },
          "get_text": {
            "type": "object",
            "additionalProperties": false,
            "required": ["element"],
            "properties": {
              "element": { "type": "string" },
              "store_as": { "type": "string" },
              "overrides": { "type": "object" }
            }
          }
        }
      }
    }
  },
  "required": ["steps"]
}
